<mvc:View controllerName="test.test-mta-ui.controller.Home" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
  <Shell id="shell">
  <App id="app">
    <pages>
    <Page id="page" title="{i18n>title}">
      <content>
      <sap.ui.layout:VerticalLayout xmlns:sap.ui.layout="sap.ui.layout" id="tableContainer">
        <sap.ui.layout:content>
        <HBox width="100%" id="topButtonBar" justifyContent="Center">
          <items>
          <Button xmlns="sap.m" id="topPrevButton" icon="sap-icon://arrow-left" width="100%" press="onPrevButtonPress"/>
          <Button xmlns="sap.m" id="topNextButton" icon="sap-icon://arrow-right" width="100%" press="onNextButtonPress"/>
          </items>
        </HBox>
        <Table items="{orders>/results}" id="table" alternateRowColors="true">
          <headerToolbar>
          <Toolbar>
            <Title width="100%" text="{i18n>orderTableTitle}" id="tableTitle"/>
            <Button
              action:wiring="\{'press':\{'navigation':\{'routeName':'Products'\}\}\}"
              xmlns="sap.m" 
              text="Products" 
              id="productsButton" 
              xmlns:action="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" 
              press="onProductsButtonPress" 
              icon="sap-icon://product"
            />
            <SearchField width="100%" placeholder="{i18n>orderSearchPlaceholder}" search="onSearch"/>
          </Toolbar>
          </headerToolbar>
          <items>
          <ColumnListItem type="Active" press="onOrderPress">
            <cells>
            <Text text="{orders>OrderID}"/>
            <Text text="{orders>CustomerID}"/>
            <Text text="{orders>EmployeeID}"/>
            <Text text="{orders>OrderDate}"/>
            <Text text="{orders>RequiredDate}"/>
            <Text text="{orders>ShippedDate}"/>
            </cells>
          </ColumnListItem>
          </items>
          <columns>
          <Column>
            <header><Label text="{i18n>orderId}"/></header>
          </Column>
          <Column>
            <header><Label text="{i18n>customerId}"/></header>
          </Column>
          <Column>
            <header><Label text="{i18n>employeeId}"/></header>
          </Column>
          <Column>
            <header><Label text="{i18n>orderDate}"/></header>
          </Column>
          <Column>
            <header><Label text="{i18n>requiredDate}"/></header>
          </Column>
          <Column>
            <header><Label text="{i18n>shippedDate}"/></header>
          </Column>
          </columns>
        </Table>
        </sap.ui.layout:content>
        <HBox xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:sap.ui.layout="sap.ui.layout" width="100%" justifyContent="Center" id="bottomButtonBar">
        <items>
          <Button xmlns="sap.m" id="bottomPrevButton" icon="sap-icon://arrow-left" width="100%" press="onPrevButtonPress"/>
          <Button xmlns="sap.m" id="bottomNextButton" icon="sap-icon://arrow-right" width="100%" press="onNextButtonPress"/>
        </items>
        </HBox>
      </sap.ui.layout:VerticalLayout>
      </content>
    </Page>
    </pages>
  </App>
  </Shell>
</mvc:View>